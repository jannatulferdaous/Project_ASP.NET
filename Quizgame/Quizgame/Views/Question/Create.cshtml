@model Quizgame.Models.Quiz

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
             
            <div class="form-group">
                <label asp-for="ArticleId "class="control-label">Article</label>
                <span asp-validation-for="ArticleId" class="text-danger"></span>
                @Html.DropDownListFor(m => m.ArticleId, new SelectList(ViewBag.Article, "ArticleId","Title"))
            </div>

             

            <div class="form-group">
                
                @Html.DropDownListFor(m => m.Title,
                new SelectList(Enum.GetValues(typeof(Quiz.titlelist))),
                "Select Title")
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Question)

                    <br />
                @Html.TextAreaFor(m => m.Question)
                @Html.ValidationMessageFor(m => m.Question, "", new { @class = "error" })
                    <br />
                <span>@Html.Raw(Model.Question)</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@*@Scripts.Render("~/bundles/jquery")*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/lib/jquery/dist/jquery")"></script>
}
