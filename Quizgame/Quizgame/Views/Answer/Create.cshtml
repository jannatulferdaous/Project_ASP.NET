@model Quizgame.Models.QuizAnswer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <span asp-validation-for="QuestionId" class="text-danger"></span>
                @Html.DropDownListFor(m => m.QuestionId, new SelectList(ViewBag.questions, "QuestionId", "ShortQuestion"))
                
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Answer)

                <br />
                @Html.TextAreaFor(m => m.Answer)
                @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "error" })
                <br />
                <span>@Html.Raw(Model.Answer)</span>
            </div>
            <br/>   
            <div class="form-group">
                <label asp-for="IsCorrect" class="control-label"></label>
                <span asp-validation-for="IsCorrect" class="text-danger"class="text-xxl-center"></span>
                @Html.CheckBoxFor(m => m. IsCorrect)
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
@*@Scripts.Render("~/bundles/jquery")*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/lib/jquery/dist/jquery")"></script>
}
